<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/layServerItem"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:elevation="1dp">

    <TextView
        android:id="@+id/tvServerHost"
        android:text="@string/txtServerItemIpEmptyValue"
        android:layout_weight="2.03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="20sp"
        android:onClick="chooseServer"
        />

    <TextView
        android:id="@+id/tvServerPort"
        android:text="@string/txtServerItemPortEmptyValue"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="20sp"
    android:onClick="chooseServer"/>


</LinearLayout>