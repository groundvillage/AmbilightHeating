<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/layProfileItem"
    android:onClick="callColorChangeOnServer"
    android:layout_height="match_parent"
    android:background="@color/defaultProfileColor">

    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/txtEmptyProfile"
        android:textSize="20sp"
        android:layout_weight="1.00" />

    <Button
        android:id="@+id/btnProfileActivate"
        android:text="@string/txtActivateProfilButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="18sp"
        android:onClick="activateProfile" />


</LinearLayout>